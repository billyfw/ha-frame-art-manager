# Environment Variables Template
# Copy this file to .env and update with your local paths

# Path to your frame art directory
# For development, point this to your Home Assistant www/frame_art directory
# Example: /home/username/ha-config/www/frame_art
FRAME_ART_PATH=/path/to/your/ha-config/www/frame_art

# Optional label for this add-on instance (e.g. Madrone)
# FRAME_ART_HOME=Madrone

# Server port (optional, defaults to 8099)
# PORT=8099

# Git Sync Configuration
# Auto-pull latest changes on server startup (default: true)
GIT_AUTO_PULL_ON_STARTUP=true

# Auto-push changes after each operation (default: true)
GIT_AUTO_PUSH_ON_CHANGE=true

# Git commit author configuration
GIT_COMMIT_USER_NAME="Frame Art Manager"
GIT_COMMIT_USER_EMAIL="frame-art@homeassistant.local"
