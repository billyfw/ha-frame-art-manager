{
  "name": "frame-art-manager",
  "version": "0.1.0",
  "description": "Samsung Frame TV Art Manager - Backend API",
  "main": "server.js",
  "scripts": {
    "start": "npm test && node server.js",
    "dev": "nodemon server.js",
    "test": "node tests/run-all-tests.js",
    "test:semantic": "node tests/semantic-sync.test.js",
    "test:git": "node tests/git-sync.test.js",
    "test:metadata": "node tests/metadata-helper.test.js",
    "test:coordination": "node tests/file-coordination.test.js",
    "test:validation": "node tests/validation.test.js",
    "test:verbose": "node tests/semantic-sync.test.js --verbose && node tests/git-sync.test.js --verbose && node tests/metadata-helper.test.js --verbose && node tests/file-coordination.test.js --verbose",
    "postinstall": "npm rebuild sharp --silent"
  },
  "keywords": [
    "homeassistant",
    "samsung",
    "frame-tv",
    "art"
  ],
  "author": "Billy",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.0",
    "blockhash-core": "^0.1.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "exif-reader": "^2.0.3",
    "express": "^4.18.2",
    "heic-convert": "^2.1.0",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.34.4",
    "simple-git": "^3.28.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  }
}
